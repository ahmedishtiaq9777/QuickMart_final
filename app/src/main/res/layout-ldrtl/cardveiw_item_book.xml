<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="260dp"
    android:layout_height="210dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    cardview:cardCornerRadius="4dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/book_img_id"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop"
            android:src="@drawable/loadingbackgroundd"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/info_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic__info_24"
            android:layout_margin="4dp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            cardview:layout_constraintTop_toBottomOf="@id/book_img_id">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/book_title_id"
                    android:textColor="#2d2d2d"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="P_Name"/>

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/shop_RatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="85dp"
                    android:layout_height="18dp"
                    android:numStars="5"
                    android:paddingStart="4dp"
                    android:layout_marginStart="38dp"/>


            </LinearLayout>

            <TextView
            android:layout_width="40dp"
            android:paddingTop="10dp"
            android:paddingStart="2dp"
            android:layout_height="match_parent"
            android:text="@string/km"
            />

            <TextView
                android:id="@+id/book_distance"
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingEnd="2dp"
                android:layout_height="match_parent"
                android:text="2"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_location_on_black_24dp"
                android:contentDescription="TODO" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>