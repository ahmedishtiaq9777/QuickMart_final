<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbg"
    android:padding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Img"
            app:layout_constraintVertical_bias="0.23000002">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/UPDATEDNAME"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/logintxt"
                    android:drawableLeft="@drawable/ic_face"
                    android:drawablePadding="17dp"
                    android:drawableTint="@color/txtcolor"
                    android:gravity="left"
                    android:hint="Name"
                    android:lines="1"
                    android:padding="14dp"
                    android:textColor="@color/txtcolor"
                    android:textColorHint="@color/txtcolor"
                    android:textSize="@dimen/text" />


                <ImageView
                    android:id="@+id/edit_Name_btn"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_dark_background"
                    android:padding="4dp"
                    android:src="@drawable/ic_edit_24" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/loginbg" />


            <EditText
                android:id="@+id/UPDATEDPHONE"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:background="@color/logintxt"
                android:drawableLeft="@drawable/ic_confirmation_number"
                android:drawablePadding="19dp"
                android:drawableTint="@color/txtcolor"
                android:focusable="false"
                android:hint="Phone Number"
                android:padding="14dp"
                android:textColor="@color/txtcolor"
                android:textColorHint="@color/txtcolor"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/loginbg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/UPDATEDADDRESS"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@color/logintxt"
                    android:drawableLeft="@drawable/ic_chat"
                    android:drawablePadding="19dp"
                    android:drawableTint="@color/txtcolor"
                    android:hint="Address"
                    android:inputType="textPassword"
                    android:padding="14dp"
                    android:textColor="@color/txtcolor"
                    android:textColorHint="@color/txtcolor"
                    android:textSize="@dimen/text" />

                <ImageView
                    android:id="@+id/edit_Address_btn"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_dark_background"
                    android:padding="4dp"
                    android:src="@drawable/ic_edit_24" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/loginbg" />


        </LinearLayout>

        <Button
            android:id="@+id/UPDATE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/logintxt"
            android:gravity="center"
            android:padding="10dp"
            android:text="Update"
            android:textColor="@color/txtcolor"
            android:textSize="@dimen/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <ImageView
            android:id="@+id/Img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Img1"
            app:layout_constraintVertical_bias="0.23000002">


            <EditText
                android:id="@+id/Pass_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/logintxt"
                android:drawableLeft="@drawable/ic_key_black_24dp"
                android:drawablePadding="17dp"
                android:drawableTint="@color/txtcolor"
                android:gravity="left"
                android:hint="Password"
                android:lines="1"
                android:padding="14dp"
                android:textColor="@color/txtcolor"
                android:textColorHint="@color/txtcolor"
                android:textSize="@dimen/text" />


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/loginbg" />

            <EditText
                android:id="@+id/Pass_1_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/logintxt"
                android:drawableLeft="@drawable/ic_key_black_24dp"
                android:drawablePadding="19dp"
                android:drawableTint="@color/txtcolor"
                android:hint="Confirm Password"
                android:padding="14dp"
                android:textColor="@color/txtcolor"
                android:textColorHint="@color/txtcolor"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/loginbg" />


        </LinearLayout>

        <Button
            android:id="@+id/con_NewDetail_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/logintxt"
            android:gravity="center"
            android:padding="10dp"
            android:text="Update"
            android:textColor="@color/txtcolor"
            android:textSize="@dimen/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_changeUserName"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/cardview_dark_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/Name_TxT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/logintxt"
            android:drawableLeft="@drawable/ic_face"
            android:drawablePadding="17dp"
            android:drawableTint="@color/txtcolor"
            android:gravity="left"
            android:hint="Name"
            android:lines="1"
            android:padding="14dp"
            android:textColor="@color/txtcolor"
            android:textColorHint="@color/txtcolor"
            android:textSize="@dimen/text"
            app:layout_constraintBottom_toTopOf="@+id/UpdateName_Btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/UpdateName_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@color/logintxt"
            android:padding="12dp"
            android:text="@string/common_google_play_services_update_button"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_changeAddress"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/cardview_dark_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/Address_TxT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/logintxt"
            android:drawableLeft="@drawable/ic_face"
            android:drawablePadding="17dp"
            android:drawableTint="@color/txtcolor"
            android:gravity="left"
            android:hint="Address"
            android:lines="1"
            android:padding="14dp"
            android:textColor="@color/txtcolor"
            android:textColorHint="@color/txtcolor"
            android:textSize="@dimen/text"
            app:layout_constraintBottom_toTopOf="@+id/UpdateAdd_Btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/UpdateAdd_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@color/logintxt"
            android:padding="12dp"
            android:text="@string/common_google_play_services_update_button"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>