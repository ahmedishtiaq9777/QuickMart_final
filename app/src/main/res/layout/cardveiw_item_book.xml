<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="210dp"
    android:layout_height="185dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    cardview:cardCornerRadius="4dp"
    android:padding="5dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        android:background="@color/cardbg">

        <ImageView
            android:id="@+id/book_img_id"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loadingbackgroundd"
            cardview:layout_constraintBottom_toTopOf="@+id/linearLayout"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/info_Btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic__info_24"
            android:layout_margin="4dp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintTop_toBottomOf="@id/book_img_id">

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_title_id"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="P_Name"
                    android:textColor="@color/cardtxt"
                    android:textSize="13sp" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/shop_RatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="90dp"
                    android:layout_height="18dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="28dp"
                    android:numStars="5"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />


            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_location_on_black_24dp"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/book_distance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="2" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:paddingTop="10dp"
                android:text="@string/km"
                android:textColor="@color/cardtxt"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>