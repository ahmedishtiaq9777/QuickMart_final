<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demotxt.myapp.Quickmart">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Notification_Activity" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Web_Activity" />
        <activity android:name="com.demotxt.myapp.Quickmart.Order.Order_Detail_Activity" />
        <activity android:name="com.demotxt.myapp.Quickmart.Order.Order_Activity" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.AnimationOrder" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.demotxt.myapp.Quickmart.activity.Splash_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Book_Activity" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Error_Screen_Activity" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Signup" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Prod_Activity" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.r3_Activity" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Login" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Shipping" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.Confirmation" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.TabsBasic" />
        <activity android:name="com.demotxt.myapp.Quickmart.activity.MainActivity2" />
    </application>

</manifest>